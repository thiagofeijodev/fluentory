{
  "name": "fluentory",
  "description": "An AI-powered web app for English learners to practice vocabulary.",
  "version": "0.0.0",
  "private": true,
  "homepage": "./",
  "engines": {
    "npm": "11.6.0",
    "node": "24.9.0"
  },
  "scripts": {
    "start": "node --env-file=.env.development.local .config/rspack/rspack.dev.mjs",
    "start:ci": "node .config/rspack/rspack.dev.mjs",
    "build": "rspack --config .config/rspack/rspack.prod.mjs",
    "analyzer": "rspack build --analyze --mode development --config .config/rspack/rspack.prod.mjs",
    "lint": "eslint 'src/**/*.{js,jsx}' --max-warnings 0",
    "format": "prettier --write .",
    "test": "jest --maxConcurrency=2 --maxWorkers=2",
    "test:watch": "jest --watch --maxConcurrency=2 --maxWorkers=2",
    "test:coverage": "jest --coverage --maxConcurrency=2 --maxWorkers=2",
    "test:ci": "jest --json --outputFile=test-results/jest-results.json --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:desktop": "playwright test --project='chromium'",
    "test:e2e:tablet": "playwright test --project='iPad' --project='iPad Mini'",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "prepare": "husky"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.72.2",
    "@fluentui/react-icons": "^2.0.312",
    "axios": "^1.12.2",
    "core-js": "^3.46.0",
    "cytoscape": "^3.33.1",
    "cytoscape-euler": "^1.2.3",
    "firebase": "^12.4.0",
    "i18next": "^25.6.0",
    "react": "^18.2.2",
    "react-dom": "^18.2.2",
    "react-hook-form": "^7.65.0",
    "react-i18next": "^16.0.1",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rspack/cli": "^1.5.8",
    "@rspack/core": "^1.5.8",
    "@rspack/dev-server": "^1.1.4",
    "@rspack/plugin-react-refresh": "^1.5.1",
    "compression-webpack-plugin": "^11.1.0",
    "favicons": "^7.2.0",
    "favicons-rspack-plugin": "^7.0.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "^5.6.4",
    "react-refresh": "^0.18.0",
    "webpack-assets-manifest": "^6.3.0",
    "workbox-webpack-plugin": "7.3.0"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.56.1",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "^24.9.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
